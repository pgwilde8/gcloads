{
  "manifest_version": 3,
  "name": "CoDriver Scout",
  "version": "1.1",
  "description": "Surgical broker data harvester for CoDriver Freight",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://*.trucksmarter.com/*",
    "https://*.dat.com/*",
    "https://*.truckstop.com/*",
    "http://127.0.0.1:8369/*",
    "https://codriverfreight.com/*",
    "https://greencandledispatch.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.trucksmarter.com/*",
        "https://*.dat.com/*",
        "https://*.truckstop.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_title": "CoDriver Scout Status"
  }
}
